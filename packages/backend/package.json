{
  "name": "irwin-studio-backend",
  "version": "0.0.11",
  "description": "Backend for Irwin Studio",
  "main": "src/index.ts",
  "scripts": {
    "test": "yarn test:types && yarn test:lint && yarn test:unit",
    "test:lint": "eslint \"./src/**/*.{js,ts,tsx}\" --quiet --fix",
    "test:types": "tsc --noEmit",
    "test:unit": "jest",
    "start": "ALLOW_DEBUG=true wrangler dev --env=staging",
    "build": "wrangler build"
  },
  "author": "Lauchlan Irwin <lauchlan.irwin@gmail.com>",
  "license": "AGPL-3.0-only",
  "dependencies": {
    "apollo-datasource-rest": "^0.9.0",
    "apollo-server-cloudflare": "^2.25.2",
    "graphql": "^15.0.0",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.1",
    "node-html-parser": "^3.3.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^1.0.9",
    "@cloudflare/wrangler": "^1.17.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.170",
    "@types/node-fetch": "^2.5.10",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.7",
    "jest": "^27.0.6",
    "prettier": "^2.0.5",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^27.0.4",
    "ts-loader": "^7.0.4",
    "typescript": "^4.3.5",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.11"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
